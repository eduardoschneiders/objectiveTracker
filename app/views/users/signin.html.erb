<% if @session.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <%= error %><br />
  <% end %>
<% end %>

<%= form_for @session, url: session_path do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.submit "Signin" %>
<% end %>
