<!DOCTYPE html>
<html>
  <head>
    <title>Task tracker</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "https://www.google.com/jsapi"%>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render partial: 'shared/menu' %>
    <div class="container">
      <div id="notice" class="alert alert-success text-success" style="<%= 'display: none' unless flash[:notice]%>">
        <%= flash[:notice] %>
      </div>
      <%= yield %>

      <hr>

      <footer>
        <p>Â© Task Tracker <%= Date.today.strftime('%Y') %></p>
      </footer>
    </div>
    <% js_file_path = "controllers/#{controller_name}.js" %>
    <% assets_path = "#{Rails.root}/app/assets/javascripts/" %>
    <%= javascript_include_tag js_file_path if File.exists?(assets_path + js_file_path) %>
    <%= yield :footer_javascripts%>
  </body>
</html>
